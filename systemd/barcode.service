 [Unit]
 Description=Barcode Scanning Service
 After=multi-user.target

 [Service]
 Type=idle
 ExecStart=/usr/bin/python3 /home/pi/grocery-barcode-scanner/barcode.py > /home/pi/barcode.log 2>&1

 [Install]
 WantedBy=multi-user.target